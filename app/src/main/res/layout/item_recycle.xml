<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26dp"
        android:textStyle="bold"
        android:text="HAI"
        android:id="@+id/tv_name"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:id="@+id/tv_ngay"
        android:textColor="@android:color/holo_red_dark"
        android:text="Ngày yêu cầu: "/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/tv_sdt"
        android:layout_marginTop="8dp"
        android:text="Số ĐT: "/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/tv_tien"
        android:layout_marginTop="8dp"
        android:text="Số Tiền: "/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/tv_hang_xe"
        android:layout_marginTop="8dp"
        android:text="Hang xe: "/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/tv_tinh_trang_xe"
        android:layout_marginTop="8dp"
        android:text="Tình trạng xe: "/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/tv_thanhpho"
        android:layout_marginTop="8dp"
        android:text="Thanh pho: "/>

</LinearLayout>